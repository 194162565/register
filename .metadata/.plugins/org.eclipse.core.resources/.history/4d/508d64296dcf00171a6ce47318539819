<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sxt.mapper.UserMapper">
	<select id="login" resultType="com.sxt.pojo.User">
		select id,username,password from t_user
		where username = #{0} and password = #{1}
	</select>
	
	<select id="findAll" resultType="com.sxt.pojo.User">
		select id,username,password from t_user
	</select>
	
	<insert id="insertUser" parameterType="int">
		insert into t_user(id,username,password) values(#{id},#{username},#{password})
	</insert>
	
	<delete id="deleteUser" parameterType="inr">
		delete from t_user where id=#{id}
	</delete>
</mapper>